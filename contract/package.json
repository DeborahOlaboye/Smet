{
  "name": "smet-contracts",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "hardhat test --reporter hardhat-gas-reporter",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
